@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Gallery";

    int count = 0;
    int rows = 0;
    List<Repository.Robot> robots = Repository.getAllRobots();
    
    if(robots.Count > 0)
    {
        rows = robots.Count / 3;
        if(robots.Count % 3 > 0) 
        {
            rows++;
        }
    }
    
}

@for(int i = 0; i < rows; i++)
{
    <div class="row">
    @for(int j = 0; j < 3; j++)
    {
        if(count < robots.Count)
        {
            <div class="col-md-4">
                <img src="@robots[count].CoverImage" alt="photo" width="250px"/>
                @robots[count].RobotName
            </div>
        }
        count++;
    }    
    </div>
}
