@{
    Page.Title= "Home";
    Layout = "~/_Layout.cshtml";
    var db = Database.Open("basicData");
    List<Repository.Robot> robots = Repository.getLastRobots();
    var intro = Repository.getTextElement(1);

    if(IsPost && Request.QueryString["edit"] == "1")
    {
        intro = Request.Form["intro"];
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 1", intro);
        Response.Redirect("~/Default");
    }
    db.Close();
}

<div id="introduction" class="col-md-12">
    <h1>Introduction</h1>
    @if(Request.QueryString["edit"] == "1")
    {
        <form id="homepageform" method="post">
            <fieldset>
                <textarea id="intro" name="intro" class="form-control" rows="10" >@intro</textarea> <br />           
                <button type="submit" name="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Save
                </button> 
            </fieldset>
        </form>
    }
    else 
    {
        <p> @Html.Raw(intro.Replace("\n","<br />"))</p>
        if(WebSecurity.IsAuthenticated){<div class="btn btn-warning  editBtn"><a href="?edit=1"><span class="glyphicon glyphicon-wrench"></span> Edit text</a></div>}
    }

</div>
@if (robots.Count() != 0){
<div class="col-md-12" id="latest">
    <h1>Latest Additions</h1>
    @foreach (Repository.Robot robot in robots)
    {
    <div class="col-md-6">
        <div class="gallery homeGallery" style="background-image: url(@robot.CoverImage)"><a href="~/Robot?Id=@robot.RobotId">
        <h2>@robot.RobotName</h2> </a></div>
        <p>@Html.Raw(robot.RobotText.Replace("\n","<br />"))</p>
    </div>
    }
</div>
}