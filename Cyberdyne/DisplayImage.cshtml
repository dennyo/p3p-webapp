@using System.IO
@{
    int id = 0;
    if(Request["Id"].IsInt()){
        id = Request["Id"].AsInt();
        var db = Database.Open("basicData");
        var sql = "Select * From Photos Where PhotoId = @0";
        var file = db.QuerySingle(sql, id);
        Response.ContentType = file.MimeType;
        Response.BinaryWrite((byte[])file.Photo);
        db.Close();
    }
}
