@{
    var db = Database.Open("basicData");
    List<string> textElements = new List<string> {Repository.getTextElement(5), Repository.getTextElement(6), Repository.getTextElement(7), Repository.getTextElement(8), Repository.getTextElement(9), Repository.getTextElement(10)};
    var link1 = Repository.getTextElement(5);
    var link2 = Repository.getTextElement(6);
    var link3 = Repository.getTextElement(7);
    var info1 = Repository.getTextElement(8);
    var info2 = Repository.getTextElement(9);
    var info3 = Repository.getTextElement(10);
    int herp = Convert.ToInt16(Request.QueryString["editFooter"]);
    if(IsPost && herp == 1)
    {
        link1 = Request.Form["link1"];
        link2 = Request.Form["link2"];
        link3 = Request.Form["link3"];
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 5", link1);
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 6", link2);
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 7", link3);
        Response.Redirect("~");
    }
    if(IsPost && herp == 2)
    {
        info1 = Request.Form["info1"];
        info2 = Request.Form["info2"];
        info3 = Request.Form["info3"];
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 8", info1);
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 9", info2);
        db.Execute("UPDATE TextElements SET ElementText= @0 WHERE ElementID = 10", info3);
        Response.Redirect("~");
    }
    db.Close();
}
