@{

    var db = Database.Open("basicData");   
    var link1 = Repository.getTextElement(5);
    var link2 = Repository.getTextElement(6);
    var link3 = Repository.getTextElement(7);
    var contact1 = Repository.getTextElement(8);
    var contact2 = Repository.getTextElement(9);
    var contact3 = Repository.getTextElement(10);
    var currenturl = Request.RawUrl;
    var sql = "UPDATE TextElements SET ElementText= @0 WHERE ElementID = @1";
    
    if(IsPost && Request.QueryString["editfooter"] == "1")
    {
        link1 = Request.Form["link1"];
        link2 = Request.Form["link2"];
        link3 = Request.Form["link3"];
        
        db.Execute(sql, link1, 5);
        db.Execute(sql, link2, 6);
        db.Execute(sql, link3, 7);
        string path = currenturl.Substring(0, currenturl.IndexOf("?"));
        Response.Redirect(path);
    }
    if(IsPost && Request.QueryString["editfooter"] == "2")
    {
        contact1 = Request.Form["contact1"];
        contact2 = Request.Form["contact2"];
        contact3 = Request.Form["contact3"];
        db.Execute(sql, contact1, 8);
        db.Execute(sql, contact2, 9);
        db.Execute(sql, contact3, 10);
        string path = currenturl.Substring(0, currenturl.IndexOf("?"));
        Response.Redirect(path);
    }
    db.Close();
}
